<section class="section">
  <div class="container">
    <h2 class="heading-lv2">{{ section_data.title }}</h2>
    <dl class="description-list">
      {% for item in section_data.skill_list %}
        <div class="description-list__group">
          <dt class="description-list__term">
            {% render 'modules/label', text: item.title %}
          </dt>
          <dd class="description-list__description">
            {{ item.description }}
          </dd>
        </div>
      {% endfor %}
    </dl>
  </div>
</section>